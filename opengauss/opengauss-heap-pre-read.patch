+                u_sess->top_mem_cxt, "Memory Context for pre-read and pre-extend", ALLOCSET_DEFAULT_MINSIZE, ALLOCSET_DEFAULT_INITSIZE, ALLOCSET_DEFAULT_MAXSIZE);
+        oldContext = MemoryContextSwitchTo(u_sess->pre_read_mem_cxt);
+        if (isVacuum) {
